{
  "openapi": "3.0.0",
  "info": {
    "title": "Population API",
    "version": "1.0.0",
    "description": "API para acceder a datos demográficos de población",
    "contact": {
      "name": "API Support"
    },
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Población",
      "description": "Endpoints para consultar datos de población"
    }
  ],
  "paths": {
    "/api/population/municipalities": {
      "get": {
        "operationId": "getMunicipalityPopulation",
        "tags": ["Población"],
        "summary": "Obtener población por municipios",
        "description": "Devuelve datos de población agrupados por municipio",
        "parameters": [
          {
            "name": "genero",
            "in": "query",
            "description": "Filtrar por género (Hombres/Mujeres)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "edad",
            "in": "query",
            "description": "Filtrar por edad específica",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "ano",
            "in": "query",
            "description": "Filtrar por año (ej 2024)",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "ano_desde",
            "in": "query",
            "description": "Año inicial para rango",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "ano_hasta",
            "in": "query",
            "description": "Año final para rango",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "order_by",
            "in": "query",
            "description": "Ordenar por (municipio/total_poblacion)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "municipio"
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Orden (asc/desc)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "asc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Población por municipios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "lugar_id": {
                            "type": "integer"
                          },
                          "municipio": {
                            "type": "string"
                          },
                          "isla_id": {
                            "type": "integer"
                          },
                          "total_poblacion": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/population/islands": {
      "get": {
        "operationId": "getIslandPopulation",
        "tags": ["Población"],
        "summary": "Obtener población por islas",
        "description": "Devuelve datos de población agrupados por isla",
        "parameters": [
          {
            "name": "genero",
            "in": "query",
            "description": "Filtrar por género",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "edad",
            "in": "query",
            "description": "Filtrar por edad",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "ano",
            "in": "query",
            "description": "Filtrar por año",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "breakdown",
            "in": "query",
            "description": "Desglose por municipios (true/false)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order_by",
            "in": "query",
            "description": "Ordenar por (isla/total_poblacion)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "isla"
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Orden (asc/desc)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "asc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Población por islas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "isla_id": {
                            "type": "integer"
                          },
                          "isla": {
                            "type": "string"
                          },
                          "total_poblacion": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/population/evolution": {
      "get": {
        "operationId": "getPopulationEvolution",
        "tags": ["Población"],
        "summary": "Obtener evolución de población",
        "description": "Devuelve la evolución de población por año",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "Tipo (municipality/island)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "ID de municipio o isla",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Evolución de población",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "ano": {
                            "type": "integer"
                          },
                          "poblacion": {
                            "type": "integer"
                          },
                          "porcentaje_cambio": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parámetros requeridos faltantes"
          },
          "404": {
            "description": "Recurso no encontrado"
          }
        }
      }
    },
    "/api/population/search": {
      "get": {
        "operationId": "search",
        "tags": ["Población"],
        "summary": "Buscar municipios e islas",
        "description": "Busca municipios e islas por nombre (mínimo 2 caracteres)",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Término de búsqueda (mínimo 2 caracteres)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Tipo (all/municipalities/islands)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "all"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados de búsqueda",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "nombre": {
                            "type": "string"
                          },
                          "tipo": {
                            "type": "string"
                          },
                          "isla": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/population/filters": {
      "get": {
        "operationId": "getFilters",
        "tags": ["Población"],
        "summary": "Obtener opciones de filtro",
        "description": "Devuelve las opciones disponibles para filtrar",
        "responses": {
          "200": {
            "description": "Opciones de filtro disponibles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "generos": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "edades": {
                          "type": "array",
                          "items": {
                            "type": "integer"
                          }
                        },
                        "anos": {
                          "type": "array",
                          "items": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
